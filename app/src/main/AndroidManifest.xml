<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bozon.kg.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".AppControl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main_screen"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".My_profile_bozon"
            android:label="@string/title_activity_my_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotificationBozon"
            android:label="@string/title_activity_notification"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sell_goods"
            android:label="@string/title_activity_sell_goods"
            android:screenOrientation="portrait" />
        <activity
            android:name=".My_Private_Profile"
            android:label="@string/title_activity_my__private__profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Messages"
            android:label="@string/title_activity_messages"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntroActivity"
            android:label="@string/title_activity_intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppProductsActivity"
            android:label="@string/title_activity_all_products"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScanningActivity"
            android:label="@string/title_activity_scanning"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Drawer"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
