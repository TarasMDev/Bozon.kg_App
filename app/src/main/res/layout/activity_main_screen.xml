<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bglogoscreen"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="bozon.kg.app.Main_screen"
    >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Сообщения"
        android:id="@+id/button5"
        android:paddingBottom="2dp"

        android:gravity="center|center_vertical"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:background="@drawable/buttons_selector"
        android:onClick="goToMessagesView"
        android:textSize="15dp"
        android:typeface="sans"
        android:width="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Мой Профиль"
        android:id="@+id/button6"

        android:gravity="center|center_vertical"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:background="@drawable/buttons_selector"
        android:onClick="goToPrivateProfileView"
        android:textSize="15dp"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/buttons_selector"
        android:text="Категории"
        android:drawableBottom="@drawable/product_icon"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:id="@+id/button2"
        android:paddingRight="6dp"
        android:layout_gravity="right"
        android:layout_weight="0.30"

        android:textSize="10dp"

        android:layout_marginTop="116dp"
        android:layout_column="0"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Продать товар"
        android:paddingLeft="6dp"
        android:background="@drawable/buttons_selector"
        android:id="@+id/button3"
        android:layout_weight="0.30"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="10dp"
        android:drawableBottom="@drawable/add_product_icon"
        android:onClick="goToSellGoodsScreenView"
        android:layout_column="10"
        android:textStyle="normal"
        android:width="50dp"
        android:typeface="sans"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Мой BOZON"
        android:background="@drawable/buttons_selector"
        android:id="@+id/button"
        android:layout_weight="0.30"
        android:drawableBottom="@drawable/my_bozon_icon"
        android:textSize="10dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:onClick="goToMyProfileScreenView"
        android:layout_column="0"
        android:typeface="sans"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/scanProd"
        android:background="@drawable/buttons_selector"
        android:id="@+id/button7"
        android:textSize="15dp"
        android:gravity="center|center_vertical"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:onClick="goToScanView"
        android:layout_below="@+id/button5"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="false" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:queryHint="Поиск по Bozon"
        android:baselineAligned="true"
        android:divider="#ffea9127"
        android:dividerHeight="2dp"
        style="@style/AlertDialog.AppCompat"
        android:visibility="visible" />


</RelativeLayout>
