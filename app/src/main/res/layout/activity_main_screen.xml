<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/backgroundmain1"
    tools:context="bozon.kg.app.Main_screen">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/slider">

    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ef7c00"
        android:elevation="30dp"
        android:paddingTop="1dp"
        android:transitionName="actionBar" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"


        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"


        android:layout_below="@+id/frameLayout"


        android:layout_marginEnd="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.30"
        android:background="@drawable/sellgbutton"
        android:onClick="goToSellGoodsScreenView" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"

        android:layout_height="130dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"

        android:layout_alignTop="@+id/button3"
        android:layout_column="0"

        android:layout_weight="0.30"
        android:background="@drawable/mybozon"
        android:onClick="goToMyProfileScreenView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="130dp"


        android:layout_alignParentBottom="true"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"


        android:layout_toLeftOf="@+id/button3"

        android:layout_toStartOf="@+id/button3"
        android:layout_weight="0.30"
        android:background="@drawable/categories"
        android:onClick="goToCategoryScreenView"
        android:paddingRight="6dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"

        android:layout_height="130dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="15dp"
        android:background="@drawable/scangbutton"
        android:onClick="onClickScan" />

    <!--

     android:text="@string/scanProd"
        android:background="@drawable/buttons_selector"
      android:textSize="15dp"
        android:gravity="center|center_vertical"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
    -->
</RelativeLayout>
